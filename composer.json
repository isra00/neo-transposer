{
    "name": "isra00/neo-transposer",
    "description": " Automatically transpose the chords of the songs of the Neocatechumenal Way so they fit the singer's voice",
    "license": "AGPL-3.0-or-later",

    "require": {
        "php": "^7.2",

        "ext-curl": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",

        "silex/silex": "~2.0",
        "twig/twig": "~2.0",
        "symfony/twig-bridge": "~3.1",
        "symfony/translation": "~3.1",
        "symfony/security": "~3.4",
        "doctrine/dbal": "2.5.*",
        "geoip2/geoip2": "~2.5",
        "silex/web-profiler": "^2.0"
    },

    "autoload": {
        "psr-4" : {
            "NeoTransposer\\": "src/NeoTransposer"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "NeoTransposer\\Tests\\": "tests/src/NeoTransposer"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^9",
        "ext-xdebug": "*",
        "vimeo/psalm": "*"
    },

    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "php tests/testAllTranspositions.php"
        ]
    }
}